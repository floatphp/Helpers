## App rewrite
<IfModule mod_rewrite.c>
	RewriteEngine On
	RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]
	RewriteBase /__BASE__/
	# RewriteCond %{HTTPS} off
	# RewriteRule (.*) https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
	RewriteRule ^__FILE__\.php$ - [L]
	RewriteCond %{REQUEST_FILENAME} !-f
	RewriteCond %{REQUEST_FILENAME} !-d
	RewriteRule . /__BASE__/__FILE__.php [L]
</IfModule>

## Index protection
Options All -Indexes

## Folder protection
<IfModule mod_headers.c>
	<FilesMatch "^\.git">
		Order deny,allow
		Deny from all
	</FilesMatch>
</IfModule>

## File protection
<IfModule mod_headers.c>
	<FilesMatch ".(sh)$">
		Order Allow,Deny
		Deny from all
	</FilesMatch>
	<FilesMatch "\.(zip|tar|tar\.gz|rar|7z)$">
		Order Allow,Deny
		Deny from all
	</FilesMatch>
	<FilesMatch "^(global|config)\.json$">
		Order Allow,Deny
		Deny from all
	</FilesMatch>
</IfModule>

